<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/country"
            android:textColor="@color/teal_20"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tTimeZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_zone"
            android:textColor="@color/teal_20"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tLocalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/local_time"
            android:textColor="@color/teal_20"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sun" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="5sp"
                    android:text="@string/temperature"
                    android:textColor="@color/teal_20"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tHumidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="5sp"
                    android:text="@string/humidity"
                    android:textColor="@color/teal_20"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tWindSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="5sp"
                    android:text="@string/wind_speed"
                    android:textColor="@color/teal_20"
                    android:textSize="20sp" />


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_20"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tWindDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wind_direction"
            android:textColor="@color/teal_20"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tCloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cloud"
            android:textColor="@color/teal_20"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tFeelsLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feels_like"
            android:textColor="@color/teal_20"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>