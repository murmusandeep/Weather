<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/nextDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20sp"
            android:paddingEnd="5sp"
            android:textColor="@color/teal_20"
            android:textSize="20sp"
            android:text="Date"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nextIcon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sun" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maxTemp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="5sp"
                    android:text="@string/max_temp"
                    android:textColor="@color/teal_20"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/minTemp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="5sp"
                    android:text="@string/min_temp"
                    android:textColor="@color/teal_20"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/nextText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="5sp"
                    android:textColor="@color/teal_20"
                    android:textSize="20sp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/nextDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20sp"
            android:paddingEnd="5sp"
            android:textColor="@color/teal_20"
            android:textSize="20sp"
            android:text="Date"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nextIcon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sun" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maxTemp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="5sp"
                    android:text="@string/max_temp"
                    android:textColor="@color/teal_20"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/minTemp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="5sp"
                    android:text="@string/min_temp"
                    android:textColor="@color/teal_20"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/nextText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20sp"
                    android:paddingEnd="5sp"
                    android:textColor="@color/teal_20"
                    android:textSize="20sp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>